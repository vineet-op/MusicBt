generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id         Int            @id @default(autoincrement())
  title      String
  artist     String
  album      String?
  coverImage String?
  favorites  UserFavorite[]
}

model User {
  id        Int            @id @default(autoincrement())
  name      String
  favorites UserFavorite[]
}

model UserFavorite {
  userId Int
  songId Int
  user   User @relation(fields: [userId], references: [id])
  song   Song @relation(fields: [songId], references: [id])

  @@id([userId, songId])
}
